---
import { getLocaleFromUrl, useTranslations, switchLocalePath } from '@/i18n/utils';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const alternateLocale = locale === 'zh-CN' ? 'en' : 'zh-CN';
const alternatePath = switchLocalePath(Astro.url, alternateLocale);
---

<footer class="py-12 border-t border-white/5">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <div class="flex items-center gap-2">
        <span class="text-xl">✨</span>
        <span class="font-display text-lg gradient-text">story.may.cool</span>
      </div>
      
      <p class="text-white/40 text-sm text-center">
        {t.footer.tagline}
      </p>
      
      <div class="flex items-center gap-6">
        <a 
          href={alternatePath}
          class="text-white/40 hover:text-white text-sm transition-colors"
        >
          {locale === 'zh-CN' ? 'English' : '中文'}
        </a>
        <span class="text-white/20">|</span>
        <span class="text-white/40 text-sm">
          {t.footer.copyright}
        </span>
      </div>
    </div>
  </div>
</footer>
