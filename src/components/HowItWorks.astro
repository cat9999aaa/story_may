---
import { getLocaleFromUrl, useTranslations } from '@/i18n/utils';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const steps = [
  { icon: 'üéôÔ∏è', ...t.howItWorks.step1 },
  { icon: 'ü§ñ', ...t.howItWorks.step2 },
  { icon: 'üé¨', ...t.howItWorks.step3 },
];
---

<section id="how-it-works" class="py-32 relative">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center mb-20">
      <h2 class="reveal section-title mb-4">
        <span class="gradient-text">{t.howItWorks.title}</span>
      </h2>
      <p class="reveal animation-delay-100 section-subtitle">
        {t.howItWorks.subtitle}
      </p>
    </div>
    
    <div class="relative">
      <div class="hidden lg:block absolute top-1/2 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-magic-500/30 to-transparent -translate-y-1/2"></div>
      
      <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
        {steps.map((step, index) => (
          <div 
            class={`reveal animation-delay-${(index + 1) * 100} glass-card p-8 text-center relative group hover:scale-105 transition-transform duration-300`}
          >
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 w-8 h-8 rounded-full bg-cosmic-900 border-2 border-magic-500 flex items-center justify-center text-sm font-bold">
              {index + 1}
            </div>
            
            <div class="text-5xl mb-6 group-hover:scale-110 transition-transform">
              {step.icon}
            </div>
            
            <h3 class="text-xl font-semibold mb-3">{step.title}</h3>
            <p class="text-white/60">{step.description}</p>
            
            <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-magic-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
