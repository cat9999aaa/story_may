---
import { getLocaleFromUrl, useTranslations } from '@/i18n/utils';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const email = 'story@may.cool';
const subject = locale === 'zh-CN' ? '咨询story.may.cool服务' : 'Inquiry about story.may.cool';
---

<section id="contact" class="py-32 relative">
  <div class="max-w-4xl mx-auto px-4">
    <div class="reveal glass-card p-12 md:p-16 text-center relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-magic-500/10 via-transparent to-spark-500/10"></div>
      
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        {[...Array(12)].map((_, i) => (
          <div 
            class="absolute w-2 h-2 bg-magic-400 rounded-full animate-float"
            style={`
              left: ${Math.random() * 100}%;
              top: ${Math.random() * 100}%;
              animation-delay: ${Math.random() * 5}s;
              opacity: ${0.2 + Math.random() * 0.3};
            `}
          />
        ))}
      </div>
      
      <div class="relative z-10">
        <h2 class="section-title mb-4">
          <span class="gradient-text">{t.cta.title}</span>
        </h2>
        <p class="text-lg text-white/70 mb-10 max-w-xl mx-auto">
          {t.cta.subtitle}
        </p>
        
        <a 
          href={`mailto:${email}?subject=${encodeURIComponent(subject)}`}
          class="btn-magic inline-flex items-center gap-3"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          {t.cta.button}
        </a>
        
        <p class="mt-6 text-white/40 text-sm">
          {email}
        </p>
      </div>
    </div>
  </div>
</section>
